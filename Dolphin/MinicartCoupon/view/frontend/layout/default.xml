<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper">
            <referenceBlock class="Magento\Checkout\Block\Cart\Sidebar" name="minicart" template="Magento_Checkout::cart/minicart.phtml">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="types" xsi:type="array" />
                        <item name="components" xsi:type="array">
                            <item name="minicart_content" xsi:type="array">
                                <item name="children" xsi:type="array">
                                    <item name="coupon" xsi:type="array">
                                        <item name="component" xsi:type="string">Dolphin_MinicartCoupon/js/minicart/minicart-coupon</item>
                                        <item name="displayArea" xsi:type="string">couponcodeset</item>
                                        <item name="config" xsi:type="array">
                                            <item name="template" xsi:type="string">Dolphin_MinicartCoupon/minicart/minicart-coupon</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                </arguments>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
